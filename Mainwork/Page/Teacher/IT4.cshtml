                    <span class="button__text" onclick="location.href='https://localhost:44361/Page/Login.cshtml'">ออกจากระบบ</span>
                </buttonjs>

            </div>
        </div>
    </div>
    <div align="center" style="padding-top:2%">
        <div class="t" align="center">
            <h4>ผลการสอบ</h4>
        </div>
    </div>
    <form>
        <div align="center" style="padding-top:2%;">
            <div class="t">
                <div class="row">
                    <div class="col-45">
                        <label style="padding-right:5%;">ชื่ออาจารย์</label>
                    </div>
                    <div class="col-55">
                        <select class="select form-control-sm col-md-7 mb-5" name="studentname" required>
                            <option value="0">กรุณาเลือกนักศึกษา</option>
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="col-30" align="left" style="padding-left:5%;">
                        <p class="t" style="padding-left:10px; padding-left:50px;">ผลการประเมิน</p>
                        <div style="padding-left:50px;">
                            <p>โปรแกรม</p>
                            <p>การประมวณความรอบรู้</p>
                            <p>เอกสาร</p>
                            <p>การนำเสนอ</p>
                        </div>
                    </div>
                    <div class="col-70">
                        <div align="left" style="padding-left:270px;">
                            <p>คะแนน</p>
                        </div>
                        <div align="center">
                            <div>
                                <input name="programpoint" class="form-control-sm col-2" placeholder="30 คะแนน" style="text-align:center; font-size:20px;" />
                                <div class="form-check form-check-inline" style="font-size:25px; padding-left:150px;">
                                    <input class="form-check-input" type="radio" name="ProgramStatus" id="inlineRadio1" value="" required>
                                    <label class="form-check-label" for="inlineRadio1">ผ่าน</label>
                                </div>
                                <div class="form-check form-check-inline" style="font-size: 25px">
                                    <input class="form-check-input" type="radio" name="ProgramStatus" id="inlineRadio2" value="" required>
                                    <label class="form-check-label" for="inlineRadio2">ไม่ผ่าน</label>
                                </div>
                            </div>
                            <div style="padding-top:16px">
                                <input name="processpoint" class="form-control-sm col-md-2" placeholder="30 คะแนน" style="text-align: center; font-size: 20px;" />
                                <div class="form-check form-check-inline" style="font-size:25px; padding-left:150px;">
                                    <input class="form-check-input" type="radio" name="ProcessStatus" id="inlineRadio1" value="" required>
                                    <label class="form-check-label" for="inlineRadio1">ผ่าน</label>
                                </div>
                                <div class="form-check form-check-inline" style="font-size: 25px">
                                    <input class="form-check-input" type="radio" name="ProcessStatus" id="inlineRadio2" value="" required>
                                    <label class="form-check-label" for="inlineRadio2">ไม่ผ่าน</label>
                                </div>
                            </div>
                            <div style="padding-top:16px">
                                <input name="documentpoint" class="form-control-sm col-md-2" placeholder="30 คะแนน" style="text-align: center; font-size: 20px;" />
                                <div class="form-check form-check-inline" style="font-size:25px; padding-left:150px;">
                                    <input class="form-check-input" type="radio" name="DocumentStatus" id="inlineRadio1" value="" required>
                                    <label class="form-check-label" for="inlineRadio1">ผ่าน</label>
                                </div>
                                <div class="form-check form-check-inline" style="font-size: 25px">
                                    <input class="form-check-input" type="radio" name="DocumentStatus" id="inlineRadio2" value="" required>
                                    <label class="form-check-label" for="inlineRadio2">ไม่ผ่าน</label>
                                </div>
                            </div>
                            <div style="padding-top:16px">
                                <input name="presentpoint" class="form-control-sm col-md-2" placeholder="10 คะแนน" style="text-align: center; font-size: 20px;" />
                                <div class="form-check form-check-inline" style="font-size:25px; padding-left:150px;">
                                    <input class="form-check-input" type="radio" name="PresentStatus" id="inlineRadio1" value="" required>
                                    <label class="form-check-label" for="inlineRadio1">ผ่าน</label>
                                </div>
                                <div class="form-check form-check-inline" style="font-size: 25px">
                                    <input class="form-check-input" type="radio" name="PresentStatus" id="inlineRadio2" value="" required>
                                    <label class="form-check-label" for="inlineRadio2">ไม่ผ่าน</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div align="center">

            <div class="form-floating col-md-6 mb-4" style="padding-top:20px;">
                <textarea class="form-control" placeholder="Leave a comment here" id="floatingTextarea" name="note" style="height: 200px"></textarea>
                <label for="floatingTextarea">หมายเหตุ</label>
            </div>
            <div style="padding-top:20px; padding-bottom:5%;">
                <span>
                    <button style="background:#abbdee; max-width:200px;" type="submit" onclick="" ;>ยืนยัน</button>
