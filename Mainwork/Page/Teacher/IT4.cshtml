<style>

    body {
        font-family: 'Taviraj', serif;
    }

    button {
        width: 50%;
        height: 20%;
        border: none;
        color: black;
        padding: 15px 32px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 70%;
        margin: 4px 2px;
        cursor: pointer;
    }

    .buttonjs {
        display: flex;
        height: 50px;
        padding: 0;
        background: #009578;
        border: none;
        outline: none;
        border-radius: 5px;
        overflow: hidden;
        font-family: "Quicksand", sans-serif;
        font-size: 16px;
        font-weight: 500;
        cursor: pointer;
    }

    .button:hover {
        background: #008168;
    }

    .button:active {
        background: #006e58;
    }

    .button__icon,
    .button__text {
        display: inline-flex;
        align-items: center;
        padding: 0 15px;
        color: #fff;
        height: 100%;
    }

    .button__icon {
        font-size: 1.5em;
        background: rgba(0, 0, 0, 0.08);
    }
    div.t {
        border-radius: 20px;
        background-color: #f2f2f2;
        padding: 20px;
        max-width:80%;
    }
    div.tt {
        border-radius: 20px;
        background-color: #e3e3e3;
        padding-top: 20px;
        max-width: 80%;
    }
    .col-25 {
        float: left;
        width: 25%;
        margin-top: 3px;
    }

    .col-75 {
        float: left;
        width: 75%;
        margin-top: 6px;
    }
    .row:after {
        content: "";
        display: table;
        clear: both;
    }
    label {
        padding: 0px 0px 0px 0;
        display: inline-block;
    }
    .col-30 {
        float: left;
        width: 30%;
        
    }

    .col-70 {
        float: left;
        width: 70%;
        margin-top: 5px;
    }

    .col-45 {
        float: left;
        width: 45%;
    }
    .col-55 {
        float: left;
        width: 55%;
    }

    
    input {
        display: inline-block;
    }
    .reg {
        height: 100%;
        background-color: #83c750;
        overflow-x: hidden;
        padding-top: 20px;
    }

</style>
