<!DOCTYPE html>
@using WebMatrix.Data;
<!--คำสั่งการเชื่อมต่อดาต้าเบท-->
<html>
<head>
    @{
        var db = Database.Open("ResearchBooking");
        <!--คำสั่งเปิดการเชื่อมต่อดาต้าเบท-->

        var select = "SELECT studentID , studentName FROM Researchbooking.students where registrationStatus='P'";
        <!--คิวลี่ตารางดาต้าเบท-->

        var listStudent = db.Query(select);
        <!--พารามิเตอร์ เก็บข้อมูลที่ได้จากการคิวลี่-->
    }
    <title>Admin approve</title>
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/js/main.js" />
    <link rel="stylesheet" href="~/css/button.css" />
    <link rel="stylesheet" href="~/css/page.css" />
    <link rel="stylesheet" href="~/css/loginpage.css" />
    <link rel="stylesheet" href="~/bootstrap-5.1.1-dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/bootstrap-5.1.1-dist/js/bootstrap.min.js" />
    <link rel="stylesheet" href="~/css/popuplogin.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css2?family=Taviraj:wght600&display=swap"> <!--font หลัก-->
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<style>
    body {
        font-family: 'Taviraj', serif;
    }

    button {
        width: 50%;
        height: 20%;
        border: none;
        color: black;
        padding: 15px 32px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 80%;
        margin: 4px 2px;
        cursor: pointer;
    }

    table {
        width: 100%;
        font-size: 20px;
        border: 2px solid;
        border-collapse: collapse;
    }

    th {
        text-align: center;
        width: 100%;
        border: 2px solid;
        border-collapse: collapse;
    }

    td {
        text-align: left;
        border: 2px solid;
        border-collapse: collapse;
    }
    .reg {
        height: 100%;
        background-color: #83c750;
        overflow-x: hidden;
        padding-top: 20px;
    }
</style>
<body>
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>

    <div class="navbar navbar-dark reg shadow-sm">
        <div class=" navbar-brand d-flex align-items-center" style="width:100%;">

            <div style="padding-left:7%;">
                <img style="width:100px; height:100px;" src="~/Photo/logo it.png" />
            </div>
            <div style="padding-left:8%;">
                <strong style="color:black;">ระบบข้อมูลสารสนเทศวิจัยทางเทคโนโลยีสารสนเทศและนวัตกรรมดิจิทัล</strong>
            </div>
            <div style="padding-left:5%">
                <buttonjs type="button" class="buttonjs" onclick="location.href='https://localhost:44361/Page/Login.cshtml'">
                    <span class="button__text">ออกจากระบบ</span>
                </buttonjs>
            </div>

        </div>
    </div>

    <div align="center">

        <div style="padding-top:50px; ">

            <table style="max-width:800px;">

                <tr>
                    <th colspan="3">รายการนักศึกษาที่สมัครสมาชิก</th>
                </tr>
                <tr>
                    <th style="width:15%;" text-align="center">รหัสนักศึกษา</th>
                    <th colspan="2" style="width:70%;" text-align="center">ชื่อ-นามสกุล</th>
                </tr>
                @foreach (var row in listStudent)//listStudent คือตัวแปรที่เก็บข้อมูลที่คิวลี่จากดาต้าเบทมา
                {
                    <tr>
                        <td style="text-align:center;">@row["studentID"]</td>
                        <td style="padding-left:20px;">@row["studentName"]</td>
                        <td style="max-width:70px;"><button style="width: 90%; background-color: #cec1e7; margin: 10px;" ><a href="~/Page/Admin/Admin Student Detail.cshtml?studentID=@row["studentID"]">ทำรายการ</a> </button></td>
                    </tr>
                }


            </table>

        </div>
    </div>

</body>
</html>
